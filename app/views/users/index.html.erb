<div>
  <p>
	 <h1>User Signin or Signup</h1>
  </p>
</div>

<div>
	<p>
		<h3>Login</h3>
	</p>
	<%= form_tag(login_path) do |f|%>
  <p>
	  <%= label_tag(:username) %>
	  <%= text_field_tag(:username, params[:username], autofocus: true,required: true) %>
  </p>
  <p>
	  <%= label_tag(:password) %>
	  <%= password_field_tag(:password, nil, tyrequired: true) %>
  </p>
  <p>
  	<%= submit_tag "Login" %>
  </p>
  <% end %>
</div>

<div>
  <p>
  	<h5>Or signup</h5>
  </p>
  <p>
  	<%= link_to "Signup", signup_path, class:"btn btn-info" %>
  </p>
</div>
